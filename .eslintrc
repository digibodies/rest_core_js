{
  "parser": "babel-eslint",
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
        "modules": true
      },
      "sourceType": "module"
    },
    "plugins": [],
    "settings": {},
    "globals": {
      "Promise": true
    },
    "rules": {
        "no-unused-vars": ["error"],
        "indent": ["warn", 2],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error","always"],
        "eol-last": [0],
        "no-mixed-requires": [0],
        "no-underscore-dangle": [0],
        "no-console": [0]
    }
}
